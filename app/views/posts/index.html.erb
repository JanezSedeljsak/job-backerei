<h1>Posts</h1>

    <% @posts.each do |post| %>
      <div style="float:left; margin-left: 2%; width: 30%;" class="card" style="width: 18rem;">
        <img src="https://workplacepsychology.files.wordpress.com/2012/06/blogging-research-wordle.jpg" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.content %></p>
          <%= link_to 'Show', post %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>

  <div style="clear:both;"></div>
<%= link_to 'New Post', new_post_path %>
