<h1 style="margin-left: 10px">Jobs</h1>

<p id="notice"><%= notice %></p>

<div class="container">
  <div style="margin-left: -120px" class="row">
    <div class="col-6"><div  style="float: left" class="input-group mb-3">
  <input type="text" class="form-control" placeholder="Jobs">
  <div class="input-group-prepend">
    <button class="btn btn-primary" id="basic-addon1">Search</button>
  </div>
</div></div>
    <div class="col"><div class="btn-group dropleft" style="float: right">
  <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Sort By
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <a class="dropdown-item" href="#">Date | ASC</a>
    <a class="dropdown-item" href="#">Date | DESC</a>
    <a class="dropdown-item" href="#">Alphabetical | ASC</a>
    <a class="dropdown-item" href="#">Alphabetical | DESC</a>
  </div>
</div></div>
  </div>
</div>




<br style="clear:both"/>

<% @jobs.each do |job| %>
<div class="card" style="width: 30%; float: left; margin: 5px">
  <img src="https://i.imgur.com/vCTar9J.jpg" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= job.title %></h5>
    <p class="card-text" style="white-space: nowrap;"><%= job.body[0..35] %><%= job.body.length > 35 ? '...' : '' %></p>
    <hr style="border-top: 1px solid #444;" />
    <p class="card-text"><i class="fa fa-user" aria-hidden="true"></i>&nbsp;<%= job.user.name %></p>
    <% if current_user %>
      <% if !current_user.company %>
        <button style="float:right; margin-left: 10px" class="btn btn-primary">Apply</button>
      <% end %>
    <% end %>
    <%= link_to 'Details', job, class:'btn btn-dark text-white', style:"float:right" %>
  </div>
</div>
<% end %>

<br style="clear: both">
