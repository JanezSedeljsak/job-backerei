<h2>Sign in</h2>
    <style>
      .btn-google {
        background: #ad1111;
      }
      .btn-facebook {
        background: #156cab;
      }
    </style>
    <div class="card card-signin my-5" style="margin-left: 400px; width: 500px">
      <div class="card-body">
        <h5 class="card-title text-center">Sign in</h5>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-label-group">
            <label for="inputEmail">Email address</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
          </div>

          <div class="form-label-group">
            <label for="inputPassword">Password</label>
            <%= f.password_field :password, autocomplete: "current-password", class:'form-control' %>
          </div>

          <div class="custom-control custom-checkbox mb-3">
          </div>
          
          <%= f.submit "Sign in", class:'btn btn-lg btn-primary btn-block text-uppercase' %>
          <hr class="my-4">
          <button class="btn btn-lg btn-google btn-block text-uppercase text-white" type="submit">Sign in with Google</button>
          <button class="btn btn-lg btn-facebook btn-block text-uppercase text-white" type="submit">Sign in with Facebook</button>
          <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
